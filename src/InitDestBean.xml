<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
   default-init-method="init"
   default-destroy-method="dest">
   
     <!-- default-init-method="init"		(used to apply for all beans in xml)
   default-destroy-method="dest" -->
   

   <bean id = "employee" class = "com.shubham.initdestbean.Employee" ><!-- init-method="init" destroy-method="dest" (This is used to for perticular bean)-->
      <property name = "empId" value = "101"/>
      <property name = "empName" value = "A"/>
   </bean>

</beans>
